@model Product

<div>
    <form asp-controller="Products" asp-action="Edit">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UnitPrice" class="form-label">Unit Price</label>
            <input asp-for="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" rows="5" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UnitOfMeasureId" class="form-label">Unit of Measure</label>
            <select asp-for="UnitOfMeasureId" class="form-control">
                <option value=""></option>

                @if (ViewBag.UnitOfMeasures != null)
                {
                    foreach (UnitOfMeasure measure in ViewBag.UnitOfMeasures as List<UnitOfMeasure>)
                    {
                        <option value="@measure.Id">@measure.Name</option>
                    }
                }
            </select>
        </div>

        <div class="mb-3">
            <a asp-controller="ProductCategories" asp-action="Index" asp-route-productId="@Model.Id">
                Categories
            </a>
        </div>

        <div class="mb-3">
            <a asp-controller="ProductSizes" asp-action="Index" asp-route-productId="@Model.Id">
                Sizes
            </a>
        </div>

        <div class="mb-3">
            <a asp-controller="ProductColors" asp-action="Index" asp-route-productId="@Model.Id">
                Colors
            </a>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-controller="Products" asp-action="Index" class="btn btn-secondary me-2">
                Cancel
            </a>

            <button type="submit" class="btn btn-primary">
                Save
            </button>
        </div>
    </form>
</div>