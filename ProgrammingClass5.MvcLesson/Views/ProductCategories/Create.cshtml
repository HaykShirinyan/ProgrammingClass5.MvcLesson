@model ProductCategory

<div>
    <form asp-controller="ProductCategories" asp-action="Create">
        <input type="hidden" asp-for="ProductId" />

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">
                Category
            </label>
            <select asp-for="CategoryId" class="form-control">
                @if (ViewBag.Categories != null)
                {
                    @foreach (var category in ViewBag.Categories as List<Category>)
                    {
                        <option value="@category.Id">
                            @category.Name
                        </option>
                    }
                }
            </select>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-controller="ProductCategories" asp-action="Index" asp-route-productId="@Model.ProductId" class="btn btn-secondary me-2">
                Cancel
            </a>

            <button type="submit" class="btn btn-primary">
                Save
            </button>
        </div>
    </form>
</div>