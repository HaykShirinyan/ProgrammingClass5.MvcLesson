@model ProductManufacturer

<div>
    <form asp-controller="ProductManufacturers" asp-action="Edit" >

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Country" class="form-label"></label>
            <input asp-for="Country" class="form-control"/>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control"/>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Adress" class="form-label"></label>
            <input asp-for="Adress" class="form-control"/>
            <span asp-validation-for="Adress" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Rating" class="form-label"></label>
            <input asp-for="Rating" class="form-control"/>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-controller="ProductManufacturers" asp-action="Index" class="btn btn-secondary me-2">
                Cancel
            </a>

            <button type="submit" class=" btn btn-primary">
                Save
            </button>
        </div>


    </form>
</div>