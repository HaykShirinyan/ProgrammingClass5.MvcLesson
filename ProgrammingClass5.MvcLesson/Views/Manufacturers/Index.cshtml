@model List<Manufacturer>

<div>
    <a asp-controller="Manufacturers" asp-action="Create" class="btn btn-primary">
        Create Manufacturer
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Country</th>
                <th>Established Year</th>
                <th>Website</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Manufacturer manufacturer in Model)
            {
                <tr>
                    <td>@manufacturer.Id</td>
                    <td>@manufacturer.Name</td>
                    <td>@manufacturer.Country</td>
                    <td>@manufacturer.EstablishedYear</td>
                    <td>@manufacturer.Website</td>
                    <td>
                        <a asp-controller="Manufacturers" asp-action="Edit" asp-route-id="@manufacturer.Id" class="btn btn-secondary">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>